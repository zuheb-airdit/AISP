<mvc:View
    controllerName="com.approvalmatrix.approvalmatrixaisp.controller.ApprovalHierarchy"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns="sap.uxap"
    xmlns:l="sap.ui.layout"
    xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        showAnchorBarPopover="false"
        upperCaseAnchorBar="false"
        showFooter="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <heading>
                    <m:Title
                        text="New Company"
                        id="idTitle"
                        class="testclass"
                    />
                </heading>

                <snappedTitleOnMobile>
                    <m:Title text="New Company" id="idObjTitle" />
                </snappedTitleOnMobile>

                <actions>
                    <m:Button
                        id="idEditBtn"
                        icon="sap-icon://edit"
                        type="Emphasized"
                        press="onEditApproval"
                    />
                    <m:Button
                        icon="sap-icon://decline"
                        type="Reject"
                        press="onCloseApprovalSplit"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <sections>
            <ObjectPageSection
                titleUppercase="false"
                title="Company"
            >
                <subSections>
                    <ObjectPageSubSection
                        title="Company"
                        titleUppercase="false"
                        class="sapUiSmallNegativeMarginBeginEnd"
                    >
                        <blocks>
                            <m:HBox>
                                <m:VBox class="sapUiMediumMarginEnd">
                                    <m:Label text="Company Code" />
                                    <smartfield:SmartField
                                        id="entityFilter"
                                        value="{path: 'COMPANY_CODE'}"
                                        entitySet="CompanyCodeType"
                                        change="onEntityChange"
                                    />
                                </m:VBox>

                                <m:VBox>
                                    <m:Label text="Approval Type" />
                                    <m:ComboBox
                                        id="idCompoBoxReq"
                                        selectedKey="{ApprovalType}"
                                        selectionChange="onSelectofApproval"
                                        items="{
                                          path: '/ApprovalType',
                                          sorter: { path: 'CODE' }     
                                                }"
                                    >
                                        <core:Item
                                            key="{CODE}"
                                            text="{CODE} - {DESC}"
                                        />
                                    </m:ComboBox>
                                </m:VBox>
                            </m:HBox>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>

            <ObjectPageSection
                titleUppercase="false"
                title="Hierarchy Approvals"
                class="sapUiSmallNegativeMarginBeginEnd"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        showTitle="false"
                    >
                        <blocks>
                            <m:Table
                                id="idProductsTable"
                                inset="false"
                                items="{path: 'hierarchydata>/jsonObjects'}"
                                mode="SingleSelectLeft"
                                selectionChange="onSelectionChange"
                            >
                                <m:headerToolbar>
                                    <m:OverflowToolbar>
                                        <m:content>
                                            <!-- <m:Title
                                                text="Hierarchy Approval"
                                                level="H2"
                                            /> -->
                                            <m:ToolbarSpacer />
                                            <m:Button
                                                id="idCreateMassRequest"
                                                text="Create"
                                                press="onPressCreateMassApprovalInputs"
                                                icon="sap-icon://create"
                                                enabled="true"
                                            />
                                            <m:Button
                                                id="idDeleteBtmApprovalRow"
                                                text="Delete"
                                                icon="sap-icon://delete"
                                                press="onPressDeleteSelectedRows"
                                                enabled="true"
                                            />
                                        </m:content>
                                    </m:OverflowToolbar>
                                </m:headerToolbar>

                                <m:columns>
                                    <m:Column
                                        hAlign="Begin"
                                        width="5rem"
                                    >
                                        <m:Text text="Level" />
                                    </m:Column>
                                    <m:Column hAlign="Begin" width="8rem">
                                        <m:Text text="Role" />
                                    </m:Column>
                                    <m:Column hAlign="Begin">
                                        <m:Text text="User" />
                                    </m:Column>
                                    <m:Column
                                        hAlign="Center"
                                        width="5rem"
                                    >
                                        <m:Text text="Approve" />
                                    </m:Column>
                                    <m:Column
                                        hAlign="Center"
                                        width="5rem"
                                    >
                                        <m:Text text="Reject" />
                                    </m:Column>
                                    <m:Column
                                        hAlign="Center"
                                        width="5rem"
                                    >
                                        <m:Text text="SendBack" />
                                    </m:Column>
                                    <m:Column
                                        hAlign="Center"
                                        width="5rem"
                                    >
                                        <m:Text text="Edit" />
                                    </m:Column>
                                </m:columns>

                                <m:items>
                                    <m:ColumnListItem vAlign="Middle">
                                        <m:cells>
                                            <m:Text
                                                text="{hierarchydata>approvalLevel}"
                                            />

                                            <!-- <m:Input
                                                editable="{hierarchydata>editable}"
                                                valueHelpRequest="onValueHelpRoleApproval"
                                                showValueHelp="true"
                                                suggestionItems="{/UserRole}"
                                                suggestionItemSelected="onSuggestionItemSelected"
                                                value="{hierarchydata>role}"
                                            >
                                                <m:suggestionItems>
                                                    <core:ListItem
                                                        key="{hierarchydata>role}"
                                                        text="{hierarchydata>role}"
                                                    />
                                                </m:suggestionItems>
                                            </m:Input> -->
                                            <m:Input
                                                id="idRoleInput"
                                                editable="{hierarchydata>editablechk}"
                                                valueHelpRequest="onValueHelpRole"
                                                showValueHelp="true"
                                                suggestionItems="{/UserRole}"
                                                suggestionItemSelected="onSuggestionItemSelected"
                                                value="{hierarchydata>role}"
                                            >
                                                <m:suggestionItems>
                                                    <core:ListItem
                                                        key="{hierarchydata>role}"
                                                        text="{hierarchydata>role}"
                                                    />
                                                </m:suggestionItems>
                                            </m:Input>

                                            <m:Input
                                                editable="{hierarchydata>editablechk}"
                                                valueHelpRequest="onValueHelpRequested"
                                                showValueHelp="true"
                                                suggestionItems="{FilteredUser>/results}"
                                                suggestionItemSelected="onSuggestionItemSelected"
                                                value="{hierarchydata>user}"
                                            >
                                                <m:suggestionItems>
                                                    <core:ListItem
                                                        key="{hierarchydata>user}"
                                                        text="{hierarchydata>user}"
                                                    />
                                                </m:suggestionItems>
                                            </m:Input>

                                            <!-- Approve -->
                                            <m:CheckBox
                                                visible="{hierarchydata>approveCheckboxVisible}"
                                                selected="{hierarchydata>approveCheckboxSelected}"
                                                editable="{hierarchydata>editablechk}"
                                            />

                                            <!-- Reject -->
                                            <m:CheckBox
                                                visible="{hierarchydata>rejectCheckboxVisible}"
                                                selected="{hierarchydata>rejectCheckboxSelected}"
                                                editable="{hierarchydata>editablechk}"
                                            />

                                            <!-- Send Back -->
                                            <m:CheckBox
                                                visible="{hierarchydata>sendBackCheckboxVisible}"
                                                selected="{hierarchydata>sendBackCheckboxSelected}"
                                                editable="{hierarchydata>editablechk}"
                                            />

                                            <!-- Edit -->
                                            <m:CheckBox
                                                visible="{hierarchydata>editCheckboxVisible}"
                                                selected="{hierarchydata>editCheckboxSelected}"
                                                editable="{hierarchydata>editablechk}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
        <footer>
            <m:Toolbar>
                <m:ToolbarSpacer />
                <m:Button
                    id="idCreateFooterButton"
                    text="Create"
                    type="Success"
                    press="onFooterCreatePress"
                />
            </m:Toolbar>
        </footer>
    </ObjectPageLayout>
</mvc:View>
