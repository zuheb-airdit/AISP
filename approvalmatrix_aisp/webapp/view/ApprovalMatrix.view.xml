<mvc:View
    controllerName="com.approvalmatrix.approvalmatrixaisp.controller.ApprovalMatrix"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns="sap.m"
>
    <Page
        id="pageId"
        title="Approval Hierarchy Matrix"
        showHeader="true"
        titleLevel="H6"
    >
        <content>
            <f:DynamicPage
                id="dynamicPageId"
                class="sapUiSizeCompact"
            >
                <f:header>
                    <f:DynamicPageHeader
                        id="_IDGenDynamicPageHeader1"
                        pinnable="true"
                    >
                        <smartFilterBar:SmartFilterBar
                            id="smartFilterBar"
                            entitySet="CompanyCodeType"
                            persistencyKey="SmartFilter_Explored"
                            considerAnalyticalParameters="true"
                            search="onGoPress"
                            initialized="initialized"
                            showRestoreButton="true"
                            showFilterConfiguration="false"
                        >
                            <smartFilterBar:controlConfiguration>
                                <!-- Approval Type Dropdown -->
                                <smartFilterBar:ControlConfiguration
                                    id="_IDGenControlConfiguration2"
                                    key="APPR_TYPE"
                                    label="Approval Type"
                                    visibleInAdvancedArea="true"
                                />
                                <!-- Entity Field -->
                                <smartFilterBar:ControlConfiguration
                                    id="_IDGenControlConfiguration1"
                                    key="COMPANY_CODE"
                                    label="Company Code"
                                    visibleInAdvancedArea="true"
                                />
                                <!-- Basic Search Moved Below -->
                                <smartFilterBar:ControlConfiguration
                                    key="$BASIC_SEARCH"
                                    label="Search"
                                    groupId="BasicSearchGroup"
                                    visibleInAdvancedArea="true"
                                />
                            </smartFilterBar:controlConfiguration>
                        </smartFilterBar:SmartFilterBar>
                    </f:DynamicPageHeader>
                </f:header>
                <f:content>
                    <smartTable:SmartTable
                        id="approvalMatrixTable"
                        entitySet="CompanyCodeType"
                        smartFilterId="smartFilterBar"
                        tableType="ResponsiveTable"
                        placeToolbarInTable="true"
                        beforeExport="onBeforeExport"
                        useVariantManagement="true"
                        useTablePersonalisation="true"
                        header="Company"
                        showRowCount="true"
                        demandPopin="true"
                        enableAutoColumnWidth="true"
                        beforeRebindTable="onBeforeRebindTable"
                        enableAutoBinding="true"
                        ignoredFields="APPR_TYPE,COMPANY_CODE"
                        class="sapUiSmallNegativeMarginBeginEnd"
                    >
                        <smartTable:customToolbar>
                            <OverflowToolbar
                                id="_IDGenOverflowToolbar1"
                                design="Transparent"
                            >
                                <ToolbarSpacer id="_IDGenToolbarSpacer" />
                                <Button
                                    id="idCreateUser"
                                    text="Create"
                                    press="onCreateUser"
                                />
                                <Button
                                    id="idDeleteApprovalMatrix"
                                    text="Delete"
                                    press="onDeleteApprovalMatrix"
                                    enabled="false"
                                />
                            </OverflowToolbar>
                        </smartTable:customToolbar>
                        <Table
                            id="idApprovalTable"
                            mode="SingleSelectLeft"
                            growing="true"
                            selectionChange="selectionChange"
                            sticky="ColumnHeaders,HeaderToolbar"
                            updateFinished="onTableUpdateFinished"
                        >
                            <columns />
                            <items>
                                <ColumnListItem
                                    id="_IDGenColumnListItem"
                                    press="onColumnListItemPress"
                                    type="Navigation"
                                >
                                    <cells />
                                </ColumnListItem>
                            </items>
                        </Table>
                    </smartTable:SmartTable>
                </f:content>
            </f:DynamicPage>
        </content>
    </Page>
</mvc:View>
