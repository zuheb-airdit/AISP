<mvc:View
    controllerName="com.requestmanagement.requestmanagement.controller.Registrationform"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
>
    <Page title="Invitation Form" showNavButton="true" navButtonPress="onNavigateReqMang" >
        <content>
            <Wizard
                id="vendorWizard"
                complete="onWizardFinish"
                
            >
                <WizardStep
                    title="Supplier Information"
                    icon="./Images/Supplier.png"
                >
                    <layout:VerticalLayout
                        id="SupplierInformationFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <WizardStep
                    title="Finance Info"
                    icon="./Images/Finance.png"
                >
                    <layout:VerticalLayout
                        id="FinanceInformationFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <WizardStep
                    title="Operational Info"
                    icon="./Images/Operational.png"
                >
                    <layout:VerticalLayout
                        id="OperationalInformationFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <WizardStep
                    title="Disclosure"
                    icon="./Images/Disclosure.png"
                >
                    <layout:VerticalLayout
                        id="DisclosureFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <WizardStep
                    title="Quality Certificate"
                    icon="./Images/Quality.png"
                >
                    <layout:VerticalLayout
                        id="QualityCertificatesFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <WizardStep
                    title="Attachment"
                    icon="./Images/Attachment.png"
                >
                    <layout:VerticalLayout
                        id="AttachmentsFormContainer"
                        width="100%"
                    />
                </WizardStep>
                <!-- <WizardStep
                    title="Submission"
                    icon="./Images/Submission.png"
                >
                    <layout:VerticalLayout
                        id="SubmissionFormContainer"
                        width="100%"
                    />
                </WizardStep> -->
            </Wizard>
        </content>
        <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="Cancel"
                        press="onCancel"
                        type="Back"
                    />
                      <Button
                        text="Draft Save"
                        press="onDraftSave"
                        type="Transparent"
                        icon="sap-icon://save"
                    />
                    <Button
                        text="Submit"
                        press="submitForm"
                        type="Emphasized"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
