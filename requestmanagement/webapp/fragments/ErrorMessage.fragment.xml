<core:FragmentDefinition
  xmlns:core="sap.ui.core"
  xmlns="sap.m">
  <Popover
    id="errorPopover"
    title="{/title}"
    placement="Bottom">
    <content>
      <Text text="{/message}" />
    </content>
    <footer>
      <Bar>
        <contentRight>
          <Button text="Close" press="onCloseErrorPopover" />
        </contentRight>
      </Bar>
    </footer>
  </Popover>
</core:FragmentDefinition>