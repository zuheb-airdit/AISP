									<HBox
                                        class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                                    >
										<VBox class="sapUiSmallMarginBottom">
											<HBox
                                                class="sapUiTinyMarginBottom"
                                                renderType="Bare"
                                            >
												<Label
                                                    text="Company:"
                                                    class="sapUiSmallMarginEnd customLabelBold"
                                                />
												<Text
                                                    text="{requestInfo>/COMPANY_CODE}"
                                                    class="customText"
                                                />
											</HBox>
										</VBox>
									</HBox>
									<HBox
                                        class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                                    >
										<VBox class="sapUiSmallMarginBottom">
											<HBox
                                                class="sapUiTinyMarginBottom"
                                                renderType="Bare"
                                            >
