                                    titleUppercase="false"
                                    title="Submission"
                                >
									<u:subSections>
										<u:ObjectPageSubSection
                                            title="Submission"
                                            titleUppercase="false"
                                            visible="{= ${requestInfo>/REQUEST_TYPE} !== 'Create User'}"
                                        >
											<u:blocks>
												<lyt:VerticalLayout
                                                    id="SubmissionFormContainer"
                                                    width="100%"
                                                />
											</u:blocks>
										</u:ObjectPageSubSection>
									</u:subSections>
								</u:ObjectPageSection>
