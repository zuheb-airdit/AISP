<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="sendBackDialog"
        title="Send Back for Corrections"
        draggable="true"
        resizable="true"
        contentWidth="600px"
        contentHeight="220px"
    >
        <VBox class="sapUiSmallMargin">
            <Label
                text="Please provide instructions or corrections:"
                class="sapUiSmallMarginBottom"
                required="true"
            />

            <TextArea
                id="sendBackCommentTextArea"
                rows="4"
                width="100%"
                maxLength="500"
                required="true"
                liveChange=".onSendBackCommentLiveChange"
                placeholder="Enter up to 500 characters..."
            />

            <Text
                id="sendBackCharCounter"
                text="0 / 500"
                textAlign="End"
                class="sapUiTinyMarginTop sapUiContentLabel"
            />
        </VBox>

        <beginButton>
            <Button
                text="Send Back"
                type="Emphasized"
                press=".onSendBackConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onSendBackCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
