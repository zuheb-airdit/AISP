<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="rejectCommentDialog"
        title="Reject Request"
        draggable="true"
        resizable="true"
        contentWidth="600px"
        contentHeight="220px"
    >
        <VBox class="sapUiSmallMargin">
            <Label
                text="Please provide a reason for rejection:"
                class="sapUiSmallMarginBottom"
                                required="true"
            />

            <TextArea
                id="rejectCommentTextArea"
                rows="4"
                width="100%"
                maxLength="500"
                required="true"
                liveChange=".onRejectCommentLiveChange"
                placeholder="Enter up to 500 characters..."
            />

            <Text
                id="rejectCharCounter"
                text="0 / 500"
                textAlign="End"
                class="sapUiTinyMarginTop sapUiContentLabel"
            />
        </VBox>

        <beginButton>
            <Button
                text="Reject"
                type="Reject"
                press=".onRejectCommentConfirm"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press=".onRejectCommentCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
