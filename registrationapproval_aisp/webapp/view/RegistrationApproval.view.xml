<mvc:View
    controllerName="com.registration.registrationapprovalaisp.controller.RegistrationApproval"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:f="sap.f"
>
    <Page
        id="pageId"
        title="Registration Empanelment"
        showHeader="true"
    >
        <content>
            <f:DynamicPage id="dynamicPageId">
                <f:header>
                    <f:DynamicPageHeader pinnable="true">
                        <smartFilterBar:SmartFilterBar
                            id="smartFilterBar"
                            entitySet="RequestInfoWithoutFilter"
                            persistencyKey="SmartFilter_Explored"
                            considerAnalyticalParameters="true"
                            search="onGoPress"
                            initialized="initialized"
                            showRestoreButton="true"
                        >
                            <smartFilterBar:controlConfiguration />
                        </smartFilterBar:SmartFilterBar>
                    </f:DynamicPageHeader>
                </f:header>
                <f:content>
                    <smartTable:SmartTable
                        entitySet="RequestInfoWithoutFilter"
                        id="idSmartTableApprovalRegister"
                        smartFilterId="idSmartFilterRqgApp"
                        backgroundDesign="Solid"
                        showRowCount="true"
                        tableType="ResponsiveTable"
                        enableAutoBinding="true"
                        demandPopin="true"
                        smartVariant="pageVariantId"
                        persistencyKey="SmartFilterPKey"
                        useVariantManagement="true"
                        useTablePersonalisation="true"
                        enableAutoColumnWidth="true"
                        enableCopy="false"
                        header="Registration Approval List"
                        ignoredFields="ACK_VALIDATION,ACTIVITY_TYPE,APPROVER,APPROVER_LEVEL,APPROVER_ROLE,BP_TYPE_CODE,BP_TYPE_DESC,BUSINESS_TYPE,BUYER_ASSIGN_CHECK,COMMENT,CERT_OF_INCORPORATION,CERT_EXP_DATE,APPROVED_COMMENT,COMPLETED_BY,COMPLETED_BY_POSITION,CONTACT_PERSON,CREATION_TYPE,CST_NO,CURRENT_ASSIGNEE,DESIGNATION,DUE_DELI_NUM,DUE_DILIGANCE,DUE_DILIGANCE_REQ_NO,ESTAB_YEAR,GST_NO,ICV_CHECK,ICV_DATE,ICV_SCORE,INSTRUCTIONS,LAST_ACTIVE_REQ_NO,LAST_SAVED_STEP,LAST_UPDATED_ON,LEGAL_STRUCTURE,LEGAL_STRUCTURE_OTHER,LST_NO,MDG_CR_NO,MSME_CATEGORY,NDA_TYPE,NEXT_APPROVER,NO_OF_ADMIN,NO_OF_EMP,NO_OF_ENGG,NO_OF_OTHERS,NO_OF_PROD,NO_OF_QUALITY,ORDER_SIZE_MAX,ORDER_SIZE_MIN,OT_FOLDER1_ID,OT_FOLDER2_ID,OT_FOLDER3_ID,OT_FOLDER4_ID,OT_PARENT_ID,PAN_NO,PRIORITY,PROCESS_LEVEL,REASSIGN_COMMENT,REASSIGN_FLAG,REASSIGNED_ASSIGNEE,REASSIGNED_USER_ID,REJECTED_COMMENT,REMINDER_COUNT,REQUEST_RESENT,REQUEST_TYPE,REQUESTED_ID,SAP_VENDOR_CODE,SECONDARY_EMAILS_ID,SUBMISSION_DATE,REQUESTER_ID,SUPPL_CATEGORY,SUPPL_CATEGORY_DESC,SUPPL_TYPE_DESC,TOTAL_PROD_CAPACITY,TRADE_LIC_NO,TRADE_LIC_NO_DATE,TYPE_OF_INDUSTRY,VAT_CHECK,VAT_REG_DATE,VAT_REG_NUMBER,VENDOR_ACCOUNT_GROUP,WEBSITE,VENDOR_CATEGORY,VENDOR_CODE,VENDOR_NAME2,VM_VENDOR_CODE,VENDOR_REPORT_PROGRSS"

                    >
                        <smartTable:customToolbar>
                            <OverflowToolbar design="Transparent" />
                        </smartTable:customToolbar>
                        <Table
                            id="idTest"
                            selectionChange="selectionChangeHandlerRregister"
                            mode="SingleSelectLeft"
                            growing="true"
                            growingThreshold="20"
                        >
                            <columns>
                                <Column
                                    hAlign="Center"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "UPLOAD_LOGO","leadingProperty": "UPLOAD_LOGO", "sortProperty": "UPLOAD_LOGO", "filterProperty": "UPLOAD_LOGO", "columnIndex": "0" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Profile Image"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "REQUEST_NO","leadingProperty": "REQUEST_NO", "sortProperty": "REQUEST_NO", "filterProperty": "REQUEST_NO", "columnIndex": "1" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Request Number"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "VENDOR_NAME1","leadingProperty": "VENDOR_NAME1", "sortProperty": "VENDOR_NAME1", "filterProperty": "VENDOR_NAME1", "columnIndex": "2" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Supplier Name"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Desktop"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "COMPANY_CODE","leadingProperty": "COMPANY_CODE", "sortProperty": "COMPANY_CODE", "filterProperty": "COMPANY_CODE", "columnIndex": "3" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Company Code"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Desktop"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "REGISTERED_ID","leadingProperty": "REGISTERED_ID", "sortProperty": "REGISTERED_ID", "filterProperty": "REGISTERED_ID", "columnIndex": "4" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Supplier Email"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "SUPPL_TYPE","leadingProperty": "SUPPL_TYPE", "sortProperty": "SUPPL_TYPE", "filterProperty": "SUPPL_TYPE", "columnIndex": "5"}'
                                        />
                                    </customData>
                                    <Label
                                        text="Supplier Type"
                                        wrapping="false"
                                        vAlign="Inherit"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "BP_TYPE_CODE","leadingProperty": "BP_TYPE_CODE", "sortProperty": "BP_TYPE_CODE", "filterProperty": "BP_TYPE_CODE", "columnIndex": "6"}'
                                        />
                                    </customData>
                                    <Label
                                        text="Supplier Sub-Type"
                                        wrapping="true"
                                        vAlign="Inherit"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "CREATED_ON","leadingProperty": "CREATED_ON", "sortProperty": "CREATED_ON", "filterProperty": "CREATED_ON", "columnIndex": "7"}'
                                        />
                                    </customData>
                                    <Label
                                        text="Created On"
                                        wrapping="true"
                                    />
                                </Column>
                                <Column
                                    hAlign="Begin"
                                    demandPopin="true"
                                    minScreenWidth="Tablet"
                                    popinDisplay="Inline"
                                    width="auto"
                                >
                                    <customData>
                                        <core:CustomData
                                            key="p13nData"
                                            value='\{"columnKey": "STATUS","leadingProperty": "STATUS", "sortProperty": "STATUS", "filterProperty": "STATUS", "columnIndex": "8" }'
                                        />
                                    </customData>
                                    <Label
                                        text="Status"
                                        wrapping="false"
                                        vAlign="Middle"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem
                                    vAlign="Middle"
                                    type="Navigation"
                                    press="handleProcessTable_RowClick"
                                >
                                    <cells>
                                    <Avatar
                                        src="{= ${UPLOAD_LOGO} ? ${UPLOAD_LOGO} : './Images/Industry.png' }"
                                        displaySize="S"
                                        initials="{= ${VENDOR_NAME1} ? ${VENDOR_NAME1}.substring(0, 2).toUpperCase() : 'AB' }"
                                        displayShape="Circle"
                                        class="sapUiTinyMarginEnd"
                                    />
                                        <VBox>
                                            <Text
                                                text="{REQUEST_NO}"
                                                class="usermasterColo"
                                            />
                                            <Text
                                                text="{REQUEST_TYPE}"
                                                class="blackText"
                                            />
                                        </VBox>
                                        <Text
                                            text="{VENDOR_NAME1}"
                                            class=""
                                        />
                                        <Text
                                            text="{COMPANY_CODE}"
                                            class=""
                                        />
                                        <Text
                                            text="{REGISTERED_ID}"
                                            class=""
                                        />
                                        <VBox>
                                            <Text
                                                text="{SUPPL_TYPE}"
                                                class=""
                                            />
                                            <Text
                                                text="{SUPPL_TYPE_DESC}"
                                                class=""
                                            />
                                        </VBox>
                                        <VBox>
                                            <Text
                                                text="{BP_TYPE_CODE}"
                                                class=""
                                            />
                                            <Text
                                                text="{BP_TYPE_DESC}"
                                                class=""
                                            />
                                        </VBox>
                                        <Text
                                            text="{path: 'CREATED_ON', formatter: '.createdOnAndByFormatter'}"
                                            class=""
                                        />
                                        <ObjectStatus
                                            text="{ parts :[{path: 'STATUS'},{path: 'APPROVER_ROLE'}], formatter: '.statusFormatter'}"
                                            state="Indication15"
                                            inverted="true"
                                            class="noWrapText"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </smartTable:SmartTable>
                </f:content>
                <f:footer>
                    <OverflowToolbar>
                        <Button text="test" />
                    </OverflowToolbar>
                </f:footer>
            </f:DynamicPage>
        </content>
    </Page>
</mvc:View>
