<mvc:View
    controllerName="com.registration.registrationapprovalaisp.controller.RegistrationApproval"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartTable='sap.ui.comp.smarttable'
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:f="sap.f"
>
    <f:DynamicPage id="dynamicPageId">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Request Approval" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <smartFilterBar:SmartFilterBar
                    id="idSmartFilterRqgApp"
                    smartVariant="pageVariantId"
                    persistencyKey="SmartFilterPKey"
                    entitySet="RequestInfoWithoutFilter"
                    useToolbar="false"
                    basicSearch="true"
                    class="sapUiTinyMarginTop sapUiMediumMarginBottom"
                >
                    <smartFilterBar:controlConfiguration>
                        <!-- <smartFilterBar:ControlConfiguration
                            key="USER_ID"
                            visibleInAdvancedArea="false"
                            index="0"
                            label="User Id"
                        /> -->
                    </smartFilterBar:controlConfiguration>
                </smartFilterBar:SmartFilterBar>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <smartTable:SmartTable
                entitySet="RequestInfoWithoutFilter"
                id="idSmartTableApprovalRegister"
                smartFilterId="idSmartFilterRqgApp"
                showRowCount="true"
                tableType="ResponsiveTable"
                enableAutoBinding="true"
                demandPopin="true"
                smartVariant="pageVariantId"
                persistencyKey="SmartFilterPKey"
                useVariantManagement="true"
                useTablePersonalisation="true"
                enableAutoColumnWidth="true"
                enableCopy="false"
                header="Registration Approval List"
                class="smallerFontTable"
            >
                <smartTable:customToolbar>
                    <OverflowToolbar design="Transparent">
                        <!-- <SearchField
                            placeholder="Enter Request No..."
                            search="onSearchRequestNoChange"
                        /> -->
                    </OverflowToolbar>
                </smartTable:customToolbar>
                <Table
                    id="idTest"
                    selectionChange="selectionChangeHandlerRregister"
                    mode="SingleSelectLeft"
                    growing="true"
                    growingThreshold="20"
                >
                    <columns>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "REQUEST_NO","leadingProperty": "REQUEST_NO", "sortProperty": "REQUEST_NO", "filterProperty": "REQUEST_NO", "columnIndex": "0" }'
                                />
                            </customData>
                            <Label
                                text="Requested Number"
                                wrapping="true"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "VENDOR_NAME1","leadingProperty": "VENDOR_NAME1", "sortProperty": "VENDOR_NAME1", "filterProperty": "VENDOR_NAME1", "columnIndex": "1" }'
                                />
                            </customData>
                            <Label
                                text="Vendor Name"
                                wrapping="true"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Desktop"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "COMPANY_CODE","leadingProperty": "COMPANY_CODE", "sortProperty": "COMPANY_CODE", "filterProperty": "COMPANY_CODE", "columnIndex": "2" }'
                                />
                            </customData>
                            <Label
                                text="Company Code"
                                wrapping="true"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Desktop"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "REGISTERED_ID","leadingProperty": "REGISTERED_ID", "sortProperty": "REGISTERED_ID", "filterProperty": "REGISTERED_ID", "columnIndex": "3" }'
                                />
                            </customData>
                            <Label
                                text="Vendor Email"
                                wrapping="true"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "SUPPL_TYPE","leadingProperty": "SUPPL_TYPE", "sortProperty": "SUPPL_TYPE", "filterProperty": "SUPPL_TYPE", "columnIndex": "4"}'
                                />
                            </customData>
                            <Label
                                text="Vendor Type"
                                wrapping="false"
                                vAlign="Inherit"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "BP_TYPE_CODE","leadingProperty": "BP_TYPE_CODE", "sortProperty": "BP_TYPE_CODE", "filterProperty": "BP_TYPE_CODE", "columnIndex": "5"}'
                                />
                            </customData>
                            <Label
                                text="Vendor Sub-Type"
                                wrapping="true"
                                vAlign="Inherit"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "CREATED_ON","leadingProperty": "CREATED_ON", "sortProperty": "CREATED_ON", "filterProperty": "CREATED_ON", "columnIndex": "6"}'
                                />
                            </customData>
                            <Label
                                text="Created On"
                                wrapping="true"
                            />
                        </Column>
                        <Column
                            hAlign="Begin"
                            demandPopin="true"
                            minScreenWidth="Tablet"
                            popinDisplay="Inline"
                            width="auto"
                        >
                            <customData>
                                <core:CustomData
                                    key="p13nData"
                                    value='\{"columnKey": "STATUS","leadingProperty": "STATUS", "sortProperty": "STATUS", "filterProperty": "STATUS", "columnIndex": "7" }'
                                />
                            </customData>
                            <Label
                                text="Status"
                                wrapping="false"
                                vAlign="Middle"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            vAlign="Middle"
                            type="Navigation"
                            press="handleProcessTable_RowClick"
                        >
                            <cells>
                                <VBox>
                                    <Text
                                        text="{REQUEST_NO}"
                                        class="usermasterColo smallerFont"
                                    />
                                    <Text
                                        text="{REQUEST_TYPE}"
                                        class="blackText smallerFont"
                                    />
                                </VBox>
                                <Text
                                    text="{VENDOR_NAME1}"
                                    class="smallerFont"
                                />
                                <Text
                                    text="{COMPANY_CODE}"
                                    class="smallerFont"
                                />
                                <Text
                                    text="{REGISTERED_ID}"
                                    class="smallerFont"
                                />
                                <VBox>
                                    <Text
                                        text="{SUPPL_TYPE}"
                                        class="smallerFont"
                                    />
                                    <Text
                                        text="{SUPPL_TYPE_DESC}"
                                        class="smallerFont"
                                    />
                                </VBox>
                                <VBox>
                                    <Text
                                        text="{BP_TYPE_CODE}"
                                        class="smallerFont"
                                    />
                                    <Text
                                        text="{BP_TYPE_DESC}"
                                        class="smallerFont"
                                    />
                                </VBox>
                                <Text
                                    text="{path: 'CREATED_ON', formatter: '.createdOnAndByFormatter'}"
                                    class="smallerFont"
                                />
                                <ObjectStatus
                                    text="{ parts :[{path: 'STATUS'},{path: 'APPROVER_ROLE'}], formatter: '.statusFormatter'}"
                                    state="Indication15"
                                    inverted="true"
                                    class="noWrapText smallerFont"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </smartTable:SmartTable>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <Button text="test" />
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
