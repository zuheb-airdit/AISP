<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="updateFormFieldDialog"
        title="Update Form Field"
        icon="sap-icon://edit"
        contentWidth="22rem"
        afterClose="onUpdateFormFieldDialogClose"
        class="customFormFieldDialogModern"
    >
        <content>
            <VBox class="sapUiLargeMargin sapUiContentPadding customFormFieldDialogModernVBox" renderType="Bare" alignItems="Stretch">

                <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                    <Text text="Field ID" class="sapUiTinyMarginEnd" />
                    <Input id="updateFieldIdInput"
                        editable="false"
                        width="9rem"
                        valueHelpOnly="true"
                        valueHelpIconSrc="sap-icon://key"
                        class="fieldIdInputModern"
                    />
                </HBox>
                
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom sapUiSmallMarginTop">
                    <HBox alignItems="Center">
                        <core:Icon src="sap-icon://hide" size="1.6rem" class="sapUiTinyMarginEnd" />
                        <Label text="Visibility" class="labelBold"/>
                    </HBox>
                    <Switch id="updateVisibleSwitch"
                        state="true"
                        change="onToggleVisible"
                        customTextOn="Visible"
                        customTextOff="Hidden"
                        class="uniqueSwitchModern"
                        tooltip="Show/Hide Field"
                    />
                </HBox>
                
                <HBox alignItems="Center" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
                    <HBox alignItems="Center">
                        <core:Icon src="sap-icon://star" size="1.6rem" class="sapUiTinyMarginEnd"/>
                        <Label text="Mandatory" class="labelBold"/>
                    </HBox>
                    <Switch id="updateMandatorySwitch"
                        state="true"
                        change="onToggleMandatory"
                        customTextOn="Yes"
                        customTextOff="No"
                        class="uniqueSwitchModern"
                        tooltip="Toggle Mandatory"
                    />
                </HBox>

                <VBox class="sapUiSmallMarginTop sapUiSmallMarginBottom" alignItems="Stretch">
                    <Label text="Description" class="labelBold"/>
                    <TextArea
                        id="updateFieldDescInput"
                        rows="3"
                        width="100%"
                        placeholder="Type field descriptionâ€¦"
                        class="uniqueTextAreaModern"
                        maxLength="250"
                    />
                </VBox>

                <!-- Divider replacement -->
                <HBox class="dividerBar"/>

                <HBox alignItems="Center" justifyContent="End">
                    <Button text="Submit" type="Emphasized" icon="sap-icon://accept" press="onUpdateFormFieldSubmit" class="sapUiSmallMarginEnd"/>
                    <Button text="Close" icon="sap-icon://decline" press="onUpdateFormFieldDialogClose"/>
                </HBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
