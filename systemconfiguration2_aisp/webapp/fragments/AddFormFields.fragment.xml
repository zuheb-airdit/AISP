<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:smartfield="sap.ui.comp.smartfield"
>
    <Dialog
        id="addFormFieldsDialog"
        title="Add Form Fields"
        icon="sap-icon://add"
        contentWidth="21rem"
        afterClose="onAddFormFieldsDialogClose"
        class="addFormFieldsDialogFiori"
    >
        <content>
            <VBox
                class="sapUiSmallMargin sapUiContentPadding"
                renderType="Bare"
                alignItems="Stretch"
            >
                <!-- Request Type Selection -->
                <Label
                    text="Request Type:"
                    required="true"
                />
                <ComboBox
                    id="addRequestTypeInput"
                    selectedKey="Create Normal"
                    class="sapUiTinyMarginEnd"
                >
                    <core:Item
                        key="Create Supplier"
                        text="Create Supplier"
                    />
                    <core:Item
                        key="Create User"
                        text="Create User"
                    />
                </ComboBox>

                <!-- Entity Selection (SmartField or ComboBox) -->
                <Label
                    text="Entity:"
                    required="true"
                    class="sapUiSmallMarginTop"
                />
                <!-- Uncomment if using SmartField -->

                <ComboBox
                    id="addEntityInput"
                    selectedKey="{CompanyCode>BUKRS}"
                    items="{
        path: '/CompanyCode'
    }"
                >
                    <core:Item
                        key="{BUKRS}"
                        text="{BUKRS} - {BUTXT}"
                    />
                </ComboBox>

                <!-- Copy Form Fields Option -->
                <Label
                    text="Do you want to copy the form fields from the existing entity?"
                    wrapping="true"
                    class="sapUiSmallMarginTop"
                />
                <HBox
                    alignItems="Center"
                    class="sapUiTinyMarginTop"
                >
                    <RadioButton
                        id="copyFieldsYes"
                        text="Yes"
                        groupName="copyFieldsGroup"
                        selected="false"
                    />
                    <RadioButton
                        id="copyFieldsNo"
                        text="No"
                        groupName="copyFieldsGroup"
                        selected="true"
                        class="sapUiSmallMarginBegin"
                    />
                </HBox>

                <!-- Buttons for Submit and Close -->
                <HBox
                    alignItems="Center"
                    justifyContent="End"
                    class="sapUiMediumMarginTop"
                >
                    <Button
                        text="Submit"
                        type="Emphasized"
                        icon="sap-icon://accept"
                        press="onAddFormFieldsSubmit"
                        class="sapUiSmallMarginEnd"
                    />
                    <Button
                        text="Close"
                        icon="sap-icon://decline"
                        press="onAddFormFieldsDialogClose"
                    />
                </HBox>
            </VBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
