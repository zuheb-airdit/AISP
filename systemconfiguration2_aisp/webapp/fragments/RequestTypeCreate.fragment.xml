<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="RequestTypeCreateDialog"
        title="Add Request Type"
        icon="sap-icon://add"
        afterClose="onRequestTypeCreateDialogClose"
        contentWidth="22rem"
    >
        <content>
            <VBox class="sapUiSmallMargin sapUiContentPadding">
            
                <Label text="Request Type" required="true" labelFor="createRequestTypeSuppInput"/>
                <Input id="createRequestTypeSuppInput" maxLength="10" placeholder="e.g., Add Request Type"/>

                <Label text="Description" required="true" labelFor="createRequestTypeDescInput"/>
                <Input id="createRequestTypeDescInput" maxLength="40" placeholder="e.g.,Add Request Type Description"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" type="Emphasized" press="onCreateRequestTypeSubmit" icon="sap-icon://accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onRequestTypeCreateDialogClose" icon="sap-icon://decline"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
