<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:sf="sap.ui.layout.form"
>
    <Dialog
        id="editFieldDialog"
        title="Edit Field: {editModel>/FIELD_NAME}"
        contentWidth="25rem"
        contentHeight="auto"
        stretch="false"
        resizable="true"
        draggable="true"
        class="customDialog"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Title
                        text="Edit : {path: 'editModel>/FIELD_NAME', formatter: '.formatSection'}"
                        level="H3"
                    />
                </contentLeft>
            </Bar>
        </customHeader>
        <content>
            <sf:SimpleForm
                id="editFieldForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
            >
                <sf:content>
                    <Label text="Field Name" required="true" />
                    <Input
                        value="{path: 'editModel>/FIELD_NAME', formatter: '.formatSection'}"
                        width="100%"
                        valueState="{= ${editModel>/FIELD_NAME} ? 'None' : 'Error'}"
                        valueStateText="Field Name is required"
                        liveChange=".onFieldNameChange"
                        class="sapUiSmallMarginBottom"
                        editable="false"
                    />
                    <Label text="Section" required="true" />
                    <Input
                        value="{path: 'editModel>/SECTION', formatter: '.formatSection'}"
                        width="100%"
                        valueState="{= ${editModel>/SECTION} ? 'None' : 'Error'}"
                        valueStateText="Section is required"
                        liveChange=".onSectionChange"
                        class="sapUiSmallMarginBottom"
                        editable="false"
                    />
                    <Label text="Settings" class="sapUiTinyMarginBottom" />
                    <HBox
                        alignItems="Center"
                        justifyContent="SpaceAround"
                        class="sapUiSmallMarginBottom"
                    >
                        <VBox class="sapUiMediumMarginEnd">
                            <Label text="Visible" />
                            <Switch
                                state="{editModel>/VISIBLE}"
                                customTextOn="Yes"
                                customTextOff="No"
                                tooltip="Toggle Visibility"
                                change=".onVisibilityChange"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>
                        <VBox>
                            <Label text="Mandatory" />
                            <Switch
                                state="{editModel>/MANDATORY}"
                                customTextOn="Yes"
                                customTextOff="No"
                                tooltip="Toggle Mandatory"
                                change=".onMandatoryChange"
                                class="sapUiTinyMarginTop"
                            />
                        </VBox>
                    </HBox>
                </sf:content>
            </sf:SimpleForm>
        </content>
        <buttons>
            <Button
                text="Save"
                type="Accept"
                press=".onSubmitEditDialog"
            />
            <Button
                text="Cancel"
                type="Reject"
                press=".onCancelEditDialog"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>