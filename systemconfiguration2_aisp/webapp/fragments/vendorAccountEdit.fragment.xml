<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="vendorEditDialog"
        title="Edit User Role"
        icon="sap-icon://edit"
        afterClose="onUserRoleEditDialogClose"
        contentWidth="22rem"
    >
        <content>
            <VBox class="sapUiSmallMargin sapUiContentPadding">
                <Label text="Code" required="true" labelFor="editUserRoleCodeInput"/>
                <Input id="editVendorCodeInput" editable="false"/>

                <Label text="Description" required="true" labelFor="editUserRoleDescInput"/>
                <Input id="editVendorDescInput"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Update" type="Emphasized" press="onEditvendorSubmit" icon="sap-icon://accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onVendorAccountEditDialogClose" icon="sap-icon://decline"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
