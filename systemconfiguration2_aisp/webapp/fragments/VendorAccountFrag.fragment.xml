<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="vendorCreateDialog"
        title="Add Vendor Account Group"
        icon="sap-icon://add"
        afterClose="onUserRoleCreateDialogClose"
        contentWidth="22rem"
    >
        <content>
            <VBox class="sapUiSmallMargin sapUiContentPadding">
                <Label text="Code" required="true"/>
                <Input id="createvendorAccountCodeInput" maxLength="20"/>

                <Label text="Description" required="true"/>
                <Input id="createvendorAccountDescInput" maxLength="50"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" type="Emphasized" press="onCreateVendorAccount" icon="sap-icon://accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onvendorAccountDialogClose" icon="sap-icon://decline"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
