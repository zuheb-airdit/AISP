<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="RequestTypeEditDialog"
        title="Edit Request Type"
        icon="sap-icon://edit"
        afterClose="onReuestTypeEditDialogClose"
        contentWidth="22rem"
    >
        <content>
            <VBox class="sapUiSmallMargin sapUiContentPadding">
                <Label text="Code" required="true" labelFor="editRequestTypeCodeInput"/>
                <Input id="editRequestTypeCodeInput" editable="false"/>

                <Label text="Request Type" required="true" labelFor="editRequestTypeSuppInput"/>
                <Input id="editRequestTypeSuppInput"/>

                <Label text="Description" required="true" labelFor="editRequestTypeDescInput"/>
                <Input id="editRequestTypeDescInput"/>

            </VBox>
        </content>
        <beginButton>
            <Button text="Update" type="Emphasized" press="onEditRequestTypeSubmit" icon="sap-icon://accept"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onRequestTypeEditDialogClose" icon="sap-icon://decline"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
