<mvc:View
    xmlns:p13n="sap.m.p13n"
    controllerName="com.sconfig.systemconfiguration2aisp.controller.MasterTable"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:dnd-grid="sap.f.dnd"
    xmlns:layout="sap.ui.layout"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:table="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:plugins="sap.m.plugins"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:dnd="sap.ui.core.dnd"
>
    <Page title="Master Data Configuration" showNavButton="true" navButtonPress="onNavHome">
        <content>
            <Panel class="sapUiTinyMarginTop">
                <Table
                    id="idProductsTable"
                    inset="false"
                    items="{ path: 'mastJsonModel>/results' }"
                    growing="true"
                    growingThreshold="12"
                    backgroundDesign="Solid"
                    growingScrollToLoad="false"
                >
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title
                                text="Items"
                                level="H2"
                            />
                            <SearchField
                                id="searchFieldS"
                                width="20rem"
                                search="onSearchProducts"
                            />
                            <ToolbarSpacer />
                            <Label
                                text="Master Table"
                                required="true"
                            />
                            <Select
                                id="selectControl"
                                change="onComboBoxChangeMaster"
                            >
                                <core:Item
                                    key="approvalType"
                                    text="Approval Types"
                                />
                                <core:Item
                                    key="country"
                                    text="Country"
                                />
                                <core:Item
                                    key="currency"
                                    text="Currency"
                                />

                                <core:Item
                                    key="companyCode"
                                    text="Company Code"
                                />
                                <core:Item
                                    key="RequestType"
                                    text="Request Type"
                                />
                                <core:Item
                                    key="userRole"
                                    text="User Role"
                                />
                                <core:Item
                                    key="vendorAccountGroup"
                                    text="Vendor Account Groups"
                                />
                            </Select>
                            <Button
                                id="idCreateButton"
                                text="Create"
                                press="onAddProduct"
                                icon="sap-icon://add"
                                type="Emphasized"
                            />
                        </OverflowToolbar>
                    </headerToolbar>

                    <columns>
                        <Column>
                            <Text text="Code" />
                        </Column>
                        <Column>
                            <Text text="Description" />
                        </Column>
                        <Column>
                            <Text
                                class="textControl"
                                text="Short Text"
                            />
                        </Column>
                        <Column>
                            <Text text="Action" />
                        </Column>
                    </columns>

                    <items>
                        <ColumnListItem vAlign="Middle">
                            <cells>
                                <Text text="{mastJsonModel>CODE}" />
                                <Text text="{mastJsonModel>DESCRIPTION}" />
                                <Text text="{mastJsonModel>SHORTTEXT}" />
                                <HBox>
                                    <Button
                                        icon="sap-icon://delete"
                                        press="onDeleteFunction"
                                        type="Critical"
                                    />
                                    <Button
                                        icon="sap-icon://edit"
                                        press="onEditFunction"
                                        class="sapUiTinyMarginBegin"
                                        type="Emphasized"
                                    />
                                </HBox>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
