                <VBox class="integrationContainer">
                    <HBox
                        width="100%"
                        class="sapUiMediumMarginBottom"
                        
                    >
                        <VBox width="69%" class="sapUiTinyMarginEnd">
                            <SearchField
                                placeholder="Search Configurations..."
                                class="searchField"
                                width="100%"
                            />
                        </VBox>
                        <VBox width="25%">
                            <ComboBox
                                selectedKey="All Categories"
                                class="categoryDropdown"
                                width="100%"
                            >
                                <items>
                                    <core:Item
                                        key="All Categories"
                                        text="All Categories"
                                    />
                                </items>
                            </ComboBox>
                        </VBox>
                    </HBox>
                    <f:GridList
                        id="gridLisst"
                        items="{integrations>/items}"
                        modeAnimationOn="true"
                        
                    >
                        <f:customLayout>
                            <grid:GridResponsiveLayout
                                layoutChange="onLayoutChange"
                            >
                                <grid:layoutS>
                                    <grid:GridSettings
                                        gridTemplateColumns="repeat(auto-fit, 8rem)"
                                        gridGap="0.25rem 0.25rem"
                                    />
                                </grid:layoutS>
                                <grid:layoutM>
                                    <grid:GridSettings
                                        gridTemplateColumns="repeat(auto-fit, 12rem)"
                                        gridGap="0.5rem 0.5rem"
                                    />
                                </grid:layoutM>
                                <grid:layoutL>
                                    <grid:GridSettings
                                        gridTemplateColumns="repeat(auto-fit, 16rem)"
                                        gridGap="0.75rem 0.75rem"
                                    />
                                </grid:layoutL>
                                <grid:layoutXL>
                                    <grid:GridSettings
                                        gridTemplateColumns="repeat(auto-fit, 20rem)"
                                        gridGap="1rem 1rem"
                                    />
                                </grid:layoutXL>
                            </grid:GridResponsiveLayout>
                        </f:customLayout>
                        <f:GridListItem ariaLabelledBy="">
                            <VBox class="sapUiSmallMargin">
                                <layoutData>
                                    <FlexItemData
                                        growFactor="2"
                                        shrinkFactor="0"
                                        minWidth="100%"
                                    />
                                </layoutData>

                                <Image
                                    src="{integrations>icon}"
                                    width="3.625rem"
                                    height="3.625rem"
                                    class="sapUiMediumMarginBottom"
                                />

                                <Title
                                    text="{integrations>title}"
                                    wrapping="true"
                                    level="H4"
                                    class="sapUiMediumMarginBottom"
                                />

                                <Label
                                    text="{integrations>subtitle}"
                                    wrapping="true"
                                />

                                <Button
                                    text="Manage"
                                    press="onManagePress"
                                    class="sapUiTinyMarginTop"
                                />
                            </VBox>
                        </f:GridListItem>
                    </f:GridList>
